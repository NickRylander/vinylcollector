<% if @song.errors.any? %>
        <h5 class="error"><%= @song.errors.full_messages.to_sentence %></h5>
<% end %>

<%= form_with model: [@vinyl, @song] do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :duration %>
    <%= f.number_field :duration %><br><br>

    <%= f.submit %>
<% end %>

<h5>Song Form View</h5>